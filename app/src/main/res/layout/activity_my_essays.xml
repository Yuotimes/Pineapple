<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.MyEssaysActivity"
    android:clipChildren="false">
    <LinearLayout
        android:clipChildren="false"
        android:id="@+id/ll_my_essays_function"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/ll_my_collection"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <Button
                android:id="@+id/bt_my_collection"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="3"
                android:background="@drawable/gradual_color_bg"
                android:text="我的收藏"/>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_my_draft"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:orientation="vertical">
            <Button
                android:id="@+id/bt_me_draft"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@drawable/gradual_color_bg"
                android:layout_weight="3"
                android:text="我的草稿"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_my_essays"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_below="@+id/ll_my_essays_function"
        android:background="#FFFFFF"/>

</RelativeLayout>