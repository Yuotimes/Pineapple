<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MeFragment"
    android:orientation="vertical">

    <!-- TODO: Update blank fragment layout -->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/me_profile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20dp"
            android:text="个人信息"
            android:textColor="#1B1B1B"
            android:textSize="50dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/me_bitmap"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/me_profile"
            android:src="@mipmap/photo"
            app:civ_border_width="0.3dp"
            app:civ_border_color="#FF000000"/>
    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:text="欢迎"
            android:textSize="30dp"
            android:textColor="#070C18"/>

        <TextView
            android:id="@+id/me_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="用户"
            android:textSize="30dp"
            android:textColor="#070C18" />

    </LinearLayout>

    <Button
        android:id="@+id/me_change_userInfo"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="修改密码"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/me_logout"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="登出应用"
        android:textSize="25dp"
        />
    <Button
        android:id="@+id/me_delete"
        android:layout_marginTop="60dp"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_gravity="center"
        android:text="删除账号"
        android:textSize="25dp"
        />






</LinearLayout>