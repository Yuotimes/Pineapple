<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.CreateAccountActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:layout_marginTop="40dp"
            android:src="@mipmap/logo" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="100dp"
            android:text="创建你的账号\n加入社区吧！"
            android:textColor="#1B1B1B"
            android:textSize="30dp" />

        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/cr_bitmap"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="20dp"
            android:layout_gravity="center"
            android:layout_toRightOf="@+id/me_profile"
            app:civ_border_width="0.3dp"
            app:civ_border_color="#FF000000"/>

        <TextView
            android:id="@+id/show_account"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <Button
            android:id="@+id/cr_upload"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_gravity="center"
            android:background="@drawable/shape_homepage_btn"
            android:text="上传头像" />

        <EditText
            android:id="@+id/cr_nickname"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="50dp"
            android:hint="输入你的昵称" />

        <EditText
            android:id="@+id/cr_account"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="自定义你的账号" />

        <EditText
            android:id="@+id/cr_password"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="输入你的密码" />

        <EditText
            android:id="@+id/cr_sure_password"
            android:layout_width="315dp"
            android:layout_height="60dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:hint="确认你的密码" />


    </LinearLayout>

    <Button
        android:id="@+id/cr_sign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/shape_signin_btn"
        android:text="创建账号并登录" />

</RelativeLayout>