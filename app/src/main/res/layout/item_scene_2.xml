<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:id="@+id/scene_2"
        android:layout_width="375dp"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:padding="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cv_scenery"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="#ffffff"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardPreventCornerOverlap="true"
            app:cardUseCompatPadding="false">
            <ImageView
                android:scaleType="centerCrop"
                android:layout_width="103dp"
                android:layout_height="120dp"
                android:src="@drawable/scene_2">
            </ImageView>

        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/tv_title"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_toRightOf="@+id/cv_scenery"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="大连老虎滩海洋公园"
            android:textColor="#1B1B1B"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/tv_score"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_title"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cv_scenery"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="4.4分   好"
            android:textColor="#767676"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_locate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_score"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cv_scenery"
            android:ellipsize="end"
            android:maxLines="1"
            android:text="大连 中山·距离市中心7.1公里"
            android:textColor="#767676"
            android:textSize="15dp" />


        <TextView
            android:id="@+id/tv_description"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_below="@id/tv_locate"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/cv_scenery"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="跨海空索道    刺激激流探险"
            android:textColor="#767676"
            android:textSize="15dp" />

    </RelativeLayout>

</RelativeLayout>