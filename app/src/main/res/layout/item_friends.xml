<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rl_friend_item"
            android:layout_width="match_parent"
            android:layout_height="90dp">
            <de.hdodenhof.circleimageview.CircleImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/image_friends_head"
                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                app:civ_border_width="0.3dp"
                app:civ_border_color="#FF000000"/>

            <TextView
                android:id="@+id/friends_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="xxxx"
                android:textColor="#0C0507"
                android:layout_toRightOf="@+id/image_friends_head"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="20dp"
                android:textSize="25dp" />

            <Button
                android:layout_width="100dp"
                android:layout_height="40dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="200dp"
                android:layout_toRightOf="@+id/image_friends_head"
                android:background="@drawable/ship_item"
                android:text="发消息">
            </Button>
        </RelativeLayout>

</RelativeLayout>